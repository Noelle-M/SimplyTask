{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="card mt-5 p-4" style="width:90%;margin-left: auto;margin-right:auto">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <label for="inputPassword" class="mt-4">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <button class="btn btn-primary mt-5 w-100" type="submit">
                Connection
            </button>
        </form>
        <div class="card-footer mt-4 bg-white">
            <p style="float:left"><a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié</a></p>
            <p style="float:right"><a href="{{ path('app_register') }}">Créer un compte</a></p>
        </div>

    </div>

{% endblock %}
